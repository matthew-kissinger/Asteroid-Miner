{
  "name": "aminer",
  "private": true,
  "version": "0.6.1",
  "type": "module",
  "description": "A 3D space mining simulation game playable directly in your web browser",
  "author": "@0xAntimatter",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 8080",
    "clean": "rimraf dist",
    "deploy": "npm run build && gh-pages -d dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:smoke": "npx tsx scripts/smoke-test.ts"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/three": "^0.180.0",
    "autoprefixer": "^10.4.20",
    "gh-pages": "^6.3.0",
    "jsdom": "^28.0.0",
    "playwright": "^1.50.0",
    "postcss": "^8.4.47",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "bitecs": "^0.4.0",
    "three": "^0.180.0"
  }
}
